@model RegistryInformationSystem.Models.Login.Login

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
    string userNotRegistered = ViewBag.UserNotRegistered;
}

<div style="margin-left:auto; margin-right:auto;">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
     {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter Details to Login</h4>
        <hr />
        <p class="badge-danger">
            @{
                if (!string.IsNullOrEmpty(userNotRegistered))
                {
                    @Html.Label(userNotRegistered);
                }
            }
        </p>
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.LoginEmail, labelText: "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LoginEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LoginEmail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <input type="submit" value="Login" class="btn btn-primary" /> &nbsp;
                <br />
                <br />
                <hr />

<p>
            <b>Click and Register with us</b>
            @Html.ActionLink("Register", "Register", "Login", null, new { @class = "btn btn-warning" })
        </p>
        </div>
    </div>
    }
</div>